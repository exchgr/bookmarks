<div class="container">
  <header class="title">
    <h2>Your Bookmarks</h2>

    <%=
      link_to "Add bookmark",
        new_bookmark_path,
        class: [:button, :"button-green", :right]
      %>
  </header>

  <% if @bookmarks.empty? %>
    <div class="bookmarks-index empty">
      <p>
        You have no bookmarks saved! Click on the button above to get started.
      </p>
    </div>
  <% else %>
    <ul class="bookmarks-index">
      <%= render @bookmarks %>
    </ul>
  <% end %>
</div>
