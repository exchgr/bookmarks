<div class="container">
  <% if @bookmarks.empty? %>
    <div class="bookmarks-index empty">
      <p>
        You have no bookmarks saved!
      </p>

      <p>
        <%=
          link_to "Add bookmark",
            new_bookmark_path,
            class: [:button, :"button-green"]
        %>
      </p>
    </div>
  <% end %>
</div>
